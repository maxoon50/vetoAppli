{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
       "sourceMap": true, 
       "removeComments": true,                       /* Generates corresponding '.map' file. ===> permet de debugger le ts dans le browser */
    // "outFile": "./",                       /* Concatenate and emit output to single file. */
    "outDir": "./app",                        /* Redirect output structure to the directory. */
    "rootDir": "./src"
    },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "/app",
    "/src"
  ]
}

